<mvc:View
    controllerName="test.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page title="{i18n>main.page.title}">
        <content>
            <VBox
                class="sapUiLargeMargin sapUiSmallMarginBeginEnd"
                width="100%"
            >
                <Title
                    text="{i18n>main.hero.title}"
                    level="H2"
                />
                <Text text="{i18n>main.hero.text}" />
            </VBox>

            <FlexBox
                fitContainer="true"
                justifyContent="Center"
                alignItems="Start"
                wrap="Wrap"
                class="sapUiLargeMarginTop sapUiSmallMarginBeginEnd"
            >
                <GenericTile
                    header="{i18n>tile.createProduct.header}"
                    subheader="{i18n>tile.createProduct.sub}"
                    press=".onTilePress"
                    class="sapUiTinyMargin"
                >
                    <customData>
                        <core:CustomData
                            key="route"
                            value="create-product"
                        />
                    </customData>
                    <tileContent>
                        <TileContent>
                            <content>
                                <ImageContent src="sap-icon://add-product" />
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>

                <GenericTile
                    header="{i18n>tile.createSupplier.header}"
                    subheader="{i18n>tile.createSupplier.sub}"
                    press=".onTilePress"
                    class="sapUiTinyMargin"
                >
                    <customData>
                        <core:CustomData
                            key="route"
                            value="create-supplier"
                        />
                    </customData>
                    <tileContent>
                        <TileContent>
                            <content>
                                <ImageContent src="sap-icon://add-product" />
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>

                <GenericTile
                    header="{i18n>tile.products.header}"
                    subheader="{i18n>tile.products.sub}"
                    press=".onTilePress"
                    class="sapUiTinyMargin"
                >
                    <customData>
                        <core:CustomData
                            key="route"
                            value="products"
                        />
                    </customData>
                    <tileContent>
                        <TileContent>
                            <content>
                                <ImageContent src="sap-icon://product" />
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
                <GenericTile
                    header="{i18n>tile.suppliers.header}"
                    subheader="{i18n>tile.suppliers.sub}"
                    press=".onTilePress"
                    class="sapUiTinyMargin"
                >
                    <customData>
                        <core:CustomData
                            key="route"
                            value="suppliers"
                        />
                    </customData>
                    <tileContent>
                        <TileContent>
                            <content>
                                <ImageContent src="sap-icon://supplier" />
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
