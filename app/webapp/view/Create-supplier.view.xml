<mvc:View
  controllerName="test.controller.Create-supplier"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form">

    <Page
        title="{i18n>supplier.create.title}"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <form:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                width="100%"
            >
                <Label
                    text="{i18n>field.name}"
                    required="true"
                />
                <Input
                    id="name"
                    value="{formValues>/name}"
                    required="true"
                    maxLength="100"
                    valueLiveUpdate="true"
                    liveChange=".onAnyFieldChange"
                    submit=".onAnyFieldChange"
                />

                <Label
                    text="{i18n>field.description}"
                    required="true"
                />
                <TextArea
                    id="description"
                    value="{formValues>/description}"
                    rows="3"
                    maxLength="500"
                    growing="true"
                    liveChange=".onAnyFieldChange"
                />
                <Label
                    text="{i18n>field.address}"
                    required="true"
                />
                <TextArea
                    id="address"
                    value="{formValues>/address}"
                    rows="3"
                    maxLength="500"
                    growing="true"
                    liveChange=".onAnyFieldChange"
                />
                <Label
                    text="{i18n>field.email}"
                    required="true"
                />
                <Input
                    id="email"
                    value="{formValues>/email}"
                    type="Email"
                    placeholder="{i18n>supplier.create.email.placeholder}"
                    valueLiveUpdate="true"
                    liveChange=".onAnyFieldChange"
                    submit=".onAnyFieldChange"
                />

                <Label text="{i18n>field.tel}" />
                <Input
                    id="tel"
                    value="{formValues>/tel}"
                    type="Tel"
                    placeholder="{i18n>supplier.create.tel.placeholder}"
                    maxLength="30"
                    valueLiveUpdate="true"
                    liveChange=".onAnyFieldChange"
                    submit=".onAnyFieldChange"
                />
            </form:SimpleForm>
        </content>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="{i18n>common.clear}"
                    press=".onClear"
                    enabled="{ui>/clearEnabled}"
                />
                <Button
                    text="{i18n>common.save}"
                    type="Emphasized"
                    icon="sap-icon://save"
                    press=".onSave"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
